<% content_for(:title, 'Mailers') %>

<%= render 'chart', type: 'bar', series: series_for(name: 'mailer.count', aggregate_using: :sum) %>
<section>
  <h2>Email Delivered</h2>

  <%= render 'events_table', events: @deliveries, fields: [
    :time, :to, :from, :subject], formatters: {
    time: ->(time, event) { link_to Time.at(time).to_fs('%H:%M:%S'), '' },
  }
  %>
</section>